<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bicitec_project.WriteCode">
    <RelativeLayout
        android:id="@+id/Background1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:background="#000"
        tools:visibility="visible">
        <RelativeLayout
            android:id="@+id/Background2"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:alpha="0.7"
            android:layout_centerVertical="true"
            android:background="#000"
            tools:visibility="visible">
            <EditText
                android:id="@+id/txtCode"
                android:layout_width="268dp"
                android:layout_height="56dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="#5EFFFFFF"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="20dp"
                android:fontFamily="@font/open_sans"
                android:textColor="#000"/>

            <Button
                android:id="@+id/btnGo"
                android:layout_width="53dp"
                android:layout_height="64dp"

                android:layout_marginTop="219dp"
                android:background="@drawable/ic_arrow"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="267dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/txtCode"
                android:fontFamily="@font/open_sans_semibold"
                android:text=" Si tienes problemas de lectura del código"
                android:textColor="#fff"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_below="@+id/txtCode"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/open_sans_semibold"
                android:text="Digita el número de la bici"
                android:textColor="#fff"
                android:textSize="25dp" />
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
