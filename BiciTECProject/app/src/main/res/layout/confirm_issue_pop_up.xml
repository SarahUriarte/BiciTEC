<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/finishView"
        android:layout_width="320dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#fff"
        android:elevation="3dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/img_tools"
                android:layout_width="90dp"
                android:layout_height="105dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/ic_tools_blk"/>

            <TextView
                android:id="@+id/txt_confirm_issue"
                android:layout_width="190dp"
                android:layout_height="85dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img_tools"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_txt_confirmar_problema" />

            <Button
                android:id="@+id/btnCancelPopUp"
                android:layout_width="94dp"
                android:layout_height="29dp"
                android:layout_below="@+id/txt_confirm_issue"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="50dp"
                android:background="#000000"
                android:fontFamily="@font/open_sans"
                android:text="Volver"
                android:textColor="#ffff" />

            <Button
                android:id="@+id/btnAcceptPopUp"
                android:layout_width="94dp"
                android:layout_height="29dp"
                android:layout_below="@+id/txt_confirm_issue"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="180dp"
                android:background="#00A89E"
                android:fontFamily="@font/open_sans"
                android:text="Aceptar"
                android:textColor="#ffff" />


        </RelativeLayout>
    </RelativeLayout>



</RelativeLayout>
