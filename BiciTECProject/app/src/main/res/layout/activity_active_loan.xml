<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActiveLoan">

    <RelativeLayout
        android:id="@+id/activeLoanView"
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:elevation="8dp"
        android:alpha="0.93"
        android:background="#FFFF"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="visible">

        <Button
            android:id="@+id/btnFinishLoan"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="440dp"
            android:background="@drawable/ic_boton_finalizar"
            />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="263dp"
            android:layout_height="315dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/ic_black_circle" />

        <TextView
            android:id="@+id/txtPrestamo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="89dp"
            android:fontFamily="@font/open_sans"
            android:text="PRÉSTAMO"
            android:textColor="#ffff"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtExpiraEn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/open_sans"
            android:text="EXPIRA EN"
            android:textColor="#ffff"
            android:textSize="40sp" />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="79dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="67dp"
            app:srcCompat="@drawable/bici_logo_green" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="239dp"
            android:layout_height="58dp"

            android:layout_alignEnd="@+id/imageView2"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-17dp"
            android:layout_marginBottom="77dp"
            android:fontFamily="@font/open_sans"
            android:text="Distancia apróximada recorrida"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/txtDistancia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="316dp"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="35dp"
            android:backgroundTint="@android:color/black"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:text="0.0km"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black" />

        <TextView
            android:id="@+id/txtTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="220dp"
            android:fontFamily="@font/open_sans"
            android:text="0:00"
            android:textColor="#ffff"
            android:textSize="25dp" />



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activeLoanViewFinishing"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:elevation="8dp"
        android:alpha="0.93"
        android:background="#FFFF"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible">


        <ImageView
            android:id="@+id/redCircle"
            android:layout_width="263dp"
            android:layout_height="315dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:src="@drawable/ic_red_circle" />

        <TextView
            android:id="@+id/txtPrestamo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="89dp"
            android:fontFamily="@font/open_sans"
            android:text="PRÉSTAMO"
            android:textColor="#ffff"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtExpiraEn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/open_sans"
            android:text="EXPIRA EN"
            android:textColor="#ffff"
            android:textSize="40sp" />


        <ImageView
            android:id="@+id/imageViewGreenLogo"
            android:layout_width="wrap_content"
            android:layout_height="79dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="21dp"
            app:srcCompat="@drawable/bici_logo_green" />

        <TextView
            android:id="@+id/textViewDistance"
            android:layout_width="239dp"
            android:layout_height="58dp"
            android:layout_alignStart="@+id/txtExpiraEn2"
            android:layout_alignTop="@+id/imageViewGreenLogo"
            android:layout_marginStart="11dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/open_sans"
            android:text="Distancia apróximada recorrida"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/txtDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="350dp"
            android:layout_marginRight="35dp"
            android:backgroundTint="@android:color/black"
            android:ellipsize="start"
            android:ems="10"
            android:gravity="center_horizontal"
            android:text="0.0km"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            />

        <TextView
            android:id="@+id/txtTimer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="220dp"
            android:fontFamily="@font/open_sans"
            android:text="0:00"
            android:textColor="#ffff"
            android:textSize="25dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnCerrarCandado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:text="Cerrar candado" />

</RelativeLayout>