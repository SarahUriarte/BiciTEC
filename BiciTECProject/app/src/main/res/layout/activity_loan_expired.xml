<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bicitec_project.LoanExpired">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/finishViewReq"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="65dp"
        android:alpha="0.93"
        android:background="#FFFF"
        android:elevation="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/icon_circle_layout"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <ImageView
                android:id="@+id/img_circle_expired"
                android:layout_width="265dp"
                android:layout_height="266dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_prestamo_expiro" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/img_text_exp"
            android:layout_width="248dp"
            android:layout_height="50dp"
            android:layout_below="@+id/icon_circle_layout"
            android:layout_marginStart="8dp"

            android:layout_marginTop="0dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/ic_estacion_cercana"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon_circle_layout" />

        <ImageView
            android:id="@+id/line1"
            android:layout_width="20dp"
            android:layout_height="57dp"
            android:layout_below="@+id/icon_circle_layout"
            android:layout_marginStart="4dp"
            android:layout_marginTop="0dp"
            android:layout_toStartOf="@+id/txtDistancia"
            android:background="@drawable/ic_line_vector"
            app:layout_constraintStart_toEndOf="@+id/img_text_exp"
            app:layout_constraintTop_toBottomOf="@+id/icon_circle_layout" />

        <ImageView
            android:id="@+id/line2"
            android:layout_width="20dp"
            android:layout_height="57dp"
            android:layout_below="@+id/icon_circle_layout"
            android:layout_marginHorizontal="290dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/ic_line_vector"
            app:layout_constraintEnd_toStartOf="@+id/img_text_exp"
            app:layout_constraintTop_toBottomOf="@+id/icon_circle_layout" />


        <Button
            android:id="@+id/btnFinishL"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_text_exp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/ic_boton_finalizar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_text_exp" />

        <ImageView
            android:id="@+id/ic_blocked"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_below="@+id/btnFinishL"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ic_blocked"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnFinishL" />

        <ImageView
            android:id="@+id/img_text_block"
            android:layout_width="223dp"
            android:layout_height="63dp"
            android:layout_below="@+id/btnFinishL"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/ic_cuenta_bloqueada"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.724"
            app:layout_constraintStart_toEndOf="@+id/ic_blocked"
            app:layout_constraintTop_toBottomOf="@+id/btnFinishL" />

        <ImageView
            android:id="@+id/img_text_mas_info"
            android:layout_width="223dp"
            android:layout_height="50dp"
            android:layout_below="@+id/img_text_block"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ic_mas_info"
            app:layout_constraintBottom_toTopOf="@+id/button4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <RelativeLayout
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="#00A89E"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="560dp">

            <ImageView
                android:id="@+id/ic_telphone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="95dp"
                android:background="@drawable/ic_tel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/open_sans_semibold"
                android:text="2550-2346"
                android:textColor="#fff"
                android:textSize="18dp" />
        </RelativeLayout>


    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
