<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bicitec_project.LoanExpired">

    <RelativeLayout
        android:id="@+id/finishViewReq"
        android:layout_width="344dp"
        android:layout_height="612dp"
        android:layout_centerInParent="true"
        android:alpha="0.93"
        android:background="#FFFF"
        android:elevation="8dp"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/icon_circle_layout"
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <ImageView
                android:id="@+id/img_circle_expired"
                android:layout_width="265dp"
                android:layout_height="266dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_prestamo_expiro" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/img_text_exp"
            android:layout_width="248dp"
            android:layout_height="50dp"
            android:layout_below="@+id/icon_circle_layout"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_estacion_cercana" />

        <ImageView
            android:id="@+id/line1"
            android:layout_width="62dp"
            android:layout_height="57dp"
            android:layout_below="@+id/icon_circle_layout"
            android:layout_toStartOf="@+id/txtDistancia"
            android:background="@drawable/ic_line_vector" />

        <ImageView
            android:id="@+id/line2"
            android:layout_width="60dp"
            android:layout_height="57dp"
            android:layout_below="@+id/icon_circle_layout"
            android:layout_marginHorizontal="290dp"
            android:background="@drawable/ic_line_vector" />


        <Button
            android:id="@+id/btnFinishL"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_text_exp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_boton_finalizar" />

        <ImageView
            android:id="@+id/ic_blocked"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_below="@+id/btnFinishL"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/ic_blocked" />

        <ImageView
            android:id="@+id/img_text_block"
            android:layout_width="223dp"
            android:layout_height="63dp"
            android:layout_below="@+id/btnFinishL"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_cuenta_bloqueada" />

        <ImageView
            android:id="@+id/img_text_mas_info"
            android:layout_width="223dp"
            android:layout_height="63dp"
            android:layout_below="@+id/img_text_block"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:background="@drawable/ic_mas_info" />


        <RelativeLayout
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_below="@+id/img_text_mas_info"
            android:layout_marginTop="1dp"
            android:background="#00A89E">

            <ImageView
                android:id="@+id/ic_telphone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="95dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_tel" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/open_sans_semibold"
                android:text="2550-2346"
                android:textColor="#fff"
                android:textSize="18dp" />
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
