<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoanFinished">

    <RelativeLayout
        android:id="@+id/finishView"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:alpha="0.93"
        android:background="#FFFF"
        android:elevation="8dp"
        android:visibility="invisible">
        
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="260dp"
            android:layout_height="305dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/ic_circulo_bici_entregada" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="216dp"
            android:layout_height="46dp"
            android:layout_alignEnd="@+id/imageView2"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="62dp"
            android:fontFamily="@font/open_sans"
            android:text="Ayudaste a reducir"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="224dp"
            android:layout_height="wrap_content"

            android:layout_alignEnd="@+id/imageView2"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/open_sans"
            android:text="de emisiones al ambiente"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="37dp"
            android:layout_height="89dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="4dp"
            android:layout_toStartOf="@+id/txtDistancia"
            android:background="@drawable/ic_huella" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="67dp"
            android:layout_marginBottom="22dp"
            android:background="#00000000"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="200 g"
            android:textColor="#00A89E"
            android:textSize="45sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/finishViewReq"
        android:layout_width="350dp"
        android:layout_height="600dp"
        android:layout_centerInParent="true"
        android:alpha="0.93"
        android:background="#FFFF"
        android:elevation="8dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/biciImg"
            android:layout_width="284dp"
            android:layout_height="307dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="34dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="281dp"
            android:layout_toStartOf="@+id/txtDistancia"
            android:background="@drawable/ic_bici" />

        <ImageView
            android:id="@+id/line1"
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="355dp"
            android:layout_toStartOf="@+id/txtDistancia"
            android:background="@drawable/ic_line_vector" />
        <ImageView
            android:id="@+id/line2"
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="355dp"
            android:layout_marginHorizontal="290dp"
            android:layout_toStartOf="@+id/txtDistancia"
            android:background="@drawable/ic_line_vector" />



        <TextView
            android:id="@+id/textViewClose"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="52dp"
            android:layout_marginBottom="213dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Cierre el candado para"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewClose2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="66dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="178dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="finalizar el préstamo"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/settings"
            android:layout_width="53dp"
            android:layout_height="64dp"
            android:layout_alignTop="@+id/line2"
            android:layout_alignEnd="@+id/line2"
            android:layout_marginHorizontal="290dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="283dp"
            android:background="@drawable/ic_settings" />

        <TextView
            android:id="@+id/textProblemas"
            android:layout_width="280dp"
            android:layout_height="57dp"
            android:layout_alignTop="@+id/textViewClose"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="71dp"
            android:layout_marginTop="104dp"
            android:layout_marginBottom="85dp"
            android:fontFamily="@font/open_sans"
            android:minLines="2"
            android:text="En caso de que tenga problemas con el cierre presione el botón"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="71dp"
            android:layout_marginTop="536dp"
            android:background="@drawable/ic_boton_finalizar" />


    </RelativeLayout>


</RelativeLayout>